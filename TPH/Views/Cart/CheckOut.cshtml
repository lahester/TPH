@model TPH.ViewModels.CustomerViewModel
@{
    ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CheckOut</h2>
<div class="container">
    @using (Html.BeginForm("CheckOut", "Cart"))
    {
        @Html.ValidationSummary(true, "Please fix the following errors")
    <h4>Shipping Details</h4>
    <div class="row">
        <div class="form-group col-lg-3">
            @Html.ValidationMessageFor(m => m.C.Name)
            @Html.LabelFor(m => m.C.Name) @Html.TextBoxFor(m => m.C.Name, new { @class = "form-control" })
        </div>
        <div class="form-group col-lg-3">
            @Html.ValidationMessageFor(m => m.C.Address)
            @Html.LabelFor(m => m.C.Address) @Html.TextBoxFor(m => m.C.Address, new { @class = "form-control" })
        </div>
        <div class="form-group col-lg-3">
            @Html.ValidationMessageFor(m => m.C.Zip)
            @Html.LabelFor(m => m.C.Zip) @Html.TextBoxFor(m => m.C.Zip, new { @class = "form-control" })
        </div>
        <div class="form-group col-lg-3">
            @Html.ValidationMessageFor(m => m.C.State)
            @Html.LabelFor(m => m.C.State) @Html.TextBoxFor(m => m.C.State, new { @class = "form-control" })
        </div>
    </div>
    <h4>Payment Details</h4>
    <div class="row">
        <div class="form-group col-lg-3">
            @Html.ValidationMessageFor(m => m.C.CardNumber)
            @Html.LabelFor(m => m.C.CardNumber) @Html.TextBoxFor(m => m.C.CardNumber, new { @class = "form-control" })
        </div>
        <div class="form-group col-lg-3">
            @Html.ValidationMessageFor(m => m.C.ExpDate)
            @Html.LabelFor(m => m.C.ExpDate) @Html.TextBoxFor(m => m.C.ExpDate, new { @class = "form-control" })
        </div>
        <div class="form-group col-lg-3">
            @Html.ValidationMessageFor(m => m.C.CEV)
            @Html.LabelFor(m => m.C.CEV) @Html.TextBoxFor(m => m.C.CEV, new { @class = "form-control" })
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    }
</div>


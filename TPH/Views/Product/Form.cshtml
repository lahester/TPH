@model TPH.ViewModels.ProductFormViewModel
@{
    ViewBag.Title = "ProductForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
   @using (Html.BeginForm("Save", "Product", new { @class = "form" }))
   {
        @Html.ValidationSummary(true, "Please fix the following errors")
    <div class="row">
        <div class="form-group col-lg-3">
            @Html.ValidationMessageFor(m => m.Product.name)
            @Html.LabelFor(m => m.Product.name) @Html.TextBoxFor(m => m.Product.name, new { @class = "form-control" })
        </div>
        <div class="form-group col-lg-3">
            @Html.ValidationMessageFor(m => m.Product.quantityInStock)
            @Html.LabelFor(m => m.Product.quantityInStock) @Html.TextBoxFor(m => m.Product.quantityInStock, new { @class = "form-control" })
        </div>
        <div class="form-group col-lg-3">
            @Html.ValidationMessageFor(m => m.Product.size)
            @Html.LabelFor(m => m.Product.size) @Html.TextBoxFor(m => m.Product.size, new { @class = "form-control" })
        </div>
        <div class="form-group col-lg-3">
            @Html.ValidationMessageFor(m => m.Product.price)
            @Html.LabelFor(m => m.Product.price) @Html.TextBoxFor(m => m.Product.price, new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-3">
            @Html.ValidationMessageFor(m => m.Product.weight)
            @Html.LabelFor(m => m.Product.weight) @Html.TextBoxFor(m => m.Product.weight, new { @class = "form-control" })
        </div>
        <div class="form-group col-lg-3">
            @Html.ValidationMessageFor(m => m.Product.color)
            @Html.LabelFor(m => m.Product.color) @Html.TextBoxFor(m => m.Product.color, new { @class = "form-control" })
        </div>
        <div class="form-group col-lg-3">
            @Html.ValidationMessageFor(m => m.Product.category)
            @Html.LabelFor(m => m.Product.category) @Html.TextBoxFor(m => m.Product.category, new { @class = "form-control" })
        </div>
        <div class="form-group col-lg-3">
            @Html.ValidationMessageFor(m => m.Product.image_URL)
            @Html.LabelFor(m => m.Product.image_URL) @Html.TextBoxFor(m => m.Product.image_URL, new { @class = "form-control" })
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    }
    
</div>


